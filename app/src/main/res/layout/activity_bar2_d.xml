<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Bar2DActivity">

    <include android:id="@+id/nav_bar"
        layout="@layout/action_bar"/>

    <ScrollView
        android:layout_below="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--条形图1-->
            <WebView
                android:id="@+id/webView_bar2d_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/white"/>
            <!--条形图2-->
            <WebView
                android:layout_below="@id/webView_bar2d_1"
                android:id="@+id/webView_bar2d_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/white"/>
            <!--条形图3-->
            <WebView
                android:layout_below="@id/webView_bar2d_2"
                android:id="@+id/webView_bar2d_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/white"/>
            <!--条形图4-->
            <WebView
                android:layout_below="@id/webView_bar2d_3"
                android:id="@+id/webView_bar2d_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/white"/>
            <!--条形图5-->
            <WebView
                android:layout_below="@id/webView_bar2d_4"
                android:id="@+id/webView_bar2d_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/white"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>